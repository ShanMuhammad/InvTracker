                </div>
            </div>
            <div class="box-body">
                <form asp-action="SalesUpload" asp-controller="ExcelUpload" method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-md-6">
                            <input class="form-control" asp-for="File" type="file" name="File" />
                        </div>
                        <div class="col-md-6">
                            <button type="submit" asp-for="SalesType" name="SalesType" value="1">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
            <!-- /.box-body -->

        </div>
    }
    else
    {
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">Recharge Sales Upload</h3>

                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                            title="Collapse">
